@{
    ViewData["Title"] = "Home Page";
}

<style>
    img {
        width: 100%;
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Exterior.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h3>Western Sydney Hotel</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Rooms.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h3>Accommodation</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Dining.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h3>Dining</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Pool.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h3>Relax</h3>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-sm-8">
        <h2>Western Sydney Hotel - WSH</h2>
        <p>
            Welcome to the Western Syndey Hotel! 
            Come to relax, dine and stay the night.
            Hope to see you soon!
        </p>
    </div>
    <div class="col-sm-4">
        <h2>Useful Links</h2>
        <ul>
            <li><a href="https://www.discoverparramatta.com/events">What's On!</a></li>
            <li><a href="http://www.bom.gov.au/nsw/forecasts/parramatta.shtml">Weather</a></li>
            <li><a href="https://transportnsw.info/regions/sydney-surrounds">Get Around</a></li>
            <li><a href="https://www.cityofparramatta.nsw.gov.au/">Parramatta Council</a></li>
        </ul>
    </div>
</div>
