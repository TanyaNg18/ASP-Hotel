@model WebHotel.Models.Customer

@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "My Details";
}

<h2>My Details</h2>

<h4>Welcome, @UserManager.GetUserName(User)! You should enter your details below before browsing other links.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MyDetailsCreate">
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="GivenName" class="control-label">Given Name</label>
                <input asp-for="GivenName" class="form-control" />
                <span asp-validation-for="GivenName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Surname</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postcode" class="control-label">Postcode</label>
                <input asp-for="Postcode" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
s
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}